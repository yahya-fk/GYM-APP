@model Models.User.UserListVM
@{
    ViewData["Title"] = "Edit User";
}

<form method="post" class="card shadow-sm p-5" asp-action="Create">
    <div class="container">
        <div class="text-center mb-2">
            <h3>Add User :</h3>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="firstName">First Name<span class="text-danger"> *</span></label>
                    <input type="text" id="firstName" asp-for="@Model.Prenom" class="form-control" required onblur="validate(1)" name="Prenom">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="lastName">Last Name<span class="text-danger"> *</span></label>
                    <input type="text" id="lastName" asp-for="@Model.Nom" class="form-control" required onblur="validate(2)" name="Nom">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <h6>Your Authentication Credentials</h6>
                <div class="form-group">
                    <label for="email">Email<span class="text-danger"> *</span></label>
                    <input type="email" id="email" asp-for="@Model.Email" class="form-control" required onblur="validate(3)" name="Email">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="password">Password<span class="text-danger"> *</span></label>
                    <input type="password" id="password" asp-for="@Model.MotDePasse" class="form-control" required onblur="validate(3)" name="MotDePasse">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="tel">Phone<span class="text-danger"> *</span></label>
                    <input type="tel" id="tel" asp-for="@Model.Tel" class="form-control" required onblur="validate(3)" name="Tel">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="img">Profile Image<span class="text-danger"> *</span></label>
                    <input type="text" id="img" asp-for="@Model.Img" class="form-control" required onblur="validate(3)" name="Img">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="isUser">User Account<span class="text-danger"> *</span></label>
                    <select id="isUser" asp-for="@Model.IsAuth" class="form-control" name="IsAuth">
                        <option value="1">Yes</option>
                        <option value="0">No</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="isAdmin">Admin Account<span class="text-danger"> *</span></label>
                    <select id="isAdmin" asp-for="@Model.IsAdmin" class="form-control" name="IsAdmin">
                        <option value="1">Yes</option>
                        <option value="0">No</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-12">
                <div class="form-group">
                    <button class="btn btn-outline-primary w-100">Submit</button>
                </div>
            </div>
        </div>
    </div>
</form>
