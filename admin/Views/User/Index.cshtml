@model List<Models.User.UserListVM>
@{
    ViewData["Title"] = "User List";
}
<div class="">
    <h5>Add User :</h5>
    <a class="btn btn-success" asp-action="create" asp-controller="User">Ajouter</a>
</div>
<div class="container mt-4">
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Tél</th>
                <th>Is Auth</th>
                <th>Is Admin</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nom</td>
                    <td>@item.Prenom</td>
                    <td>@item.Email</td>
                    <td>@item.Tel</td>
                    <td>@item.IsAuth</td>
                    <td>@item.IsAdmin</td>
                    <td>
                        <a class="btn btn-primary" asp-route-id="@item.Id" asp-action="edit" asp-controller="User">Editer</a>
                        <a class="btn btn-danger"  asp-route-id="@item.Id" asp-action="delete" asp-controller="User">Supprimer</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>