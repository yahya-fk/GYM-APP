@model Models.Login.LoginVM


@{

    ViewData["Title"] = "User Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GYM_APP.styles.css" asp-append-version="true" />
</head>
<body>
    <div class=" mt-5 d-flex align-items-center justify-content-center">
        <div class="w-75 h-100 ">
            <section class="height:100vh; text-center text-lg-start">
                <style>
                    .rounded-t-5 {
                        border-top-left-radius: 0.5rem;
                        border-top-right-radius: 0.5rem;
                    }

                </style>
                <div class="card mb-3">
                    <div class="row g-0 d-flex align-items-center">
                        <div class="col-lg-4 d-none d-lg-flex">
                            <img src="~/img/Sign IN.gif" alt="Trendy Pants and Shoes"
                                 class="w-100 rounded-t-5 rounded-tr-lg-0 rounded-bl-lg-5" />
                        </div>
                        <div class="col-lg-8">
                            <div class="card-body  py-5 px-md-5">
                                <div class="text-center">
                                    <h1>Sign In :</h1>
                                    <p class="text-danger">@ViewData["ValidateMessage"]</p>
                                </div>
                                <form method="post" asp-controller="User" asp-action="Index">
                                    <!-- Email input -->
                                    <div class="form-outline mb-4">
                                        <label class="form-label h3" for="form2Example1">Email address</label>
                                        <input type="email" asp-for="Email" class="form-control" />

                                    </div>

                                    <!-- Password input -->
                                    <div class="form-outline mb-4">
                                        <label class="form-label h3" for="form2Example2">Password</label>
                                        <input type="password" asp-for="MotdePasse" class="form-control" />
                                    </div>

                                    <!-- 2 column grid layout for inline styling -->
                                    <div class="row mb-4">
                                        <div class="col d-flex justify-content-center">
                                        </div>


                                        <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </section>

        </div>

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
