@model Models.User.UserListVM
@{
    ViewData["Title"] = "User Home";
    Layout = null;
    string index = ViewBag.Index ?? "";
    var img = @Model.SubType + ".png";
}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>User Login</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/GYM_APP.styles.css" asp-append-version="true" />
    </head>
    <body style="height:100vh; padding:0; margin:0;">
    @if (index == "True")
    {
        <div class=" text-center">
            <p class="text-success">Your data has been submited if there is a probleme with the subscription call an Admin ;)</p>
        </div>
    }

    @if (index == "False")
    {
        <div class=" text-center">
            <p class="text-danger">Error !!! </p>
        </div>
    }
    @if (index == "Cash")
    {
        <div class=" text-center">
            <p class="text-success">your bill is Submited waiting For u to pay ;)</p>
        </div>
    }
    @if (index == "Edited")
    {
        <div class=" text-center">
            <p class="text-success">your data has been edited log out To see changes ;)</p>
        </div>
    }
    <section style="height:100vh;" class=" h-100 gradient-custom-2">
            <div class="container w-100 h-100"> 
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col col-lg-9 col-xl-7">
                        <div class="card">
                            <div class="rounded-top text-white d-flex flex-row" style="background-color: #000; height:200px;">
                                <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
                                    <img src="@Model.Img"
                                         alt="Generic placeholder image" class="img-fluid r-5 img-thumbnail mt-4 mb-2"
                                         style="width: 150px; z-index: 1">
                               

                                </div>
                                <div class="ms-3" style="margin-top: 130px;">
                                    <h5>@Model.Nom @Model.Prenom</h5>
                                </div>
                            </div>
                        <div class="row mx-2 mt-5 pt-4 d-flex">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="col-auto text-decoration-none" asp-controller="User">
                                <button type="button" class="btn btn-outline-dark" data-mdb-ripple-color="dark">
                                    My Info
                                </button>
                            </a>
                            <a asp-action="Logout" class="col-auto text-decoration-none" asp-controller="User">
                                <button type="button" class="btn btn-outline-danger">
                                    Log out
                                </button>
                            </a>
                        </div>
                            <div class="card-body  text-black">
                           
                                <div class="mb-5">
                                    <p class="lead fw-normal mb-1">About</p>
                                    <div class="p-4" style="background-color: #f8f9fa;">
                                        <p class="font-italic mb-1">Email: @Model.Email</p>
                                        <p class="font-italic mb-1">Tel: @Model.Tel</p>
                                        <p class="font-italic mb-0">Subscribtion Status: @Model.SubStatus</p>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <p class="lead fw-normal mb-0">Your subscribtion</p>
                                </div>
                                <div class="row g-2">
                                    <div class="col mb-2">
                                    <img src="/img/Sub/@img"
                                             alt="image 1" class="w-100 rounded-3">
                                    </div>
                                    <div class="col mb-2">
                                       <h3>Subscription's Expire day :</h3>
                                       <p>@Model.SubExpiredDate</p>
                                        <h3 class="mt-5">Payment page :</h3>
                                        <a class="btn btn-outline-success" asp-action="" asp-controller="Bill">Extend or pay your Subscription</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </body>
</html>